{
  "name": "arithmax",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint --max-warnings=0 \"src/**/**.js\" \"src/**/**.jsx\"",
    "lint:fix": "eslint --max-warnings=0 \"src/**/**.js\" \"src/**/**.jsx\" --fix",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "yarn build && cross-env NODE_ENV=production electron-builder",
    "electron:build:win": "yarn build && cross-env NODE_ENV=production electron-builder --win",
    "electron:build:mac": "yarn build && cross-env NODE_ENV=production electron-builder --mac",
    "electron:build:win:portable": "yarn build && cross-env NODE_ENV=production electron-builder --win portable",
    "electron:build:win:nsis": "yarn build && cross-env NODE_ENV=production electron-builder --win nsis",
    "electron:build:mac:dmg": "yarn build && cross-env NODE_ENV=production electron-builder --mac dmg",
    "electron:build:mac:zip": "yarn build && cross-env NODE_ENV=production electron-builder --mac zip",
    "electron:dist": "yarn build && cross-env NODE_ENV=production electron-builder --publish=never"
  },
  "main": "electron-main.js",
  "build": {
    "appId": "com.tuempresa.arithmax",
    "productName": "Arithmax",
    "copyright": "Copyright Â© 2024",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Arithmax"
    },
    "dmg": {
      "title": "Arithmax Installer",
      "icon": "assets/icons/icon.icns",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@react-pdf/renderer": "^2.3.0",
    "@reduxjs/toolkit": "^1.8.3",
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "file-saver": "^2.0.5",
    "formik": "^2.2.9",
    "localforage": "^1.10.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.35",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "^4.3.1",
    "react-redux": "^7.2.4",
    "react-router-dom": "^6.3.0",
    "react-select": "^5.4.0",
    "sweetalert2": "^11.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-security": "^1.4.0",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.5",
    "vite": "^2.9.9",
    "vite-plugin-shim-react-pdf": "^1.0.7"
  }
}
